{
  "name": "electron-playground-ts",
  "version": "1.0.0",
  "description": "A ts playground in electron",
  "scripts": {
    "clean:dist": "rm -rf dist",
    "clean": "npm run -s clean:dist",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "npm run build && electron ./dist/main.js",
    "update:deps": "ncu -u"
  },
  "repository": "https://github.com/schamane/electron-playground-ts",
  "author": "GitHub",
  "license": "MIT",
  "keywords": [
    "Electron",
    "playground",
    "typescript"
  ],
  "devDependencies": {
    "@types/lodash": "^4.14.157",
    "@types/pixi.js": "^5.0.0",
    "@types/source-map-support": "^0.5.2",
    "electron": "^15.5.5",
    "electron-reload": "^1.5.0",
    "ncu": "^0.2.1",
    "npm-check-updates": "^7.0.2",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "fontfaceobserver": "^2.1.0",
    "lodash": "^4.17.19",
    "number-suffix": "^1.0.1",
    "pixi-filters": "^3.1.1",
    "pixi.js": "^5.3.0",
    "source-map-support": "^0.5.19"
  }
}
